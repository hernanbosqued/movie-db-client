<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/poster_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".5"
        app:layout_constraintBottom_toTopOf="@id/youtube"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        style="@style/Text.Detail.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin16"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ranking_text"
        style="@style/Text.Item.Ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin16"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_text" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/youtube"
        app:layout_constraintTop_toBottomOf="@+id/ranking_text">

        <TextView
            android:id="@+id/overview_text"
            style="@style/Text.Item.Ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin16"
            tools:text="@tools:sample/lorem/random" />
    </ScrollView>


    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/empty_view"
        style="@style/Text.Detail.Empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin16"
        android:gravity="center"
        android:text="@string/no_video"
        app:layout_constraintBottom_toBottomOf="@id/youtube"
        app:layout_constraintLeft_toLeftOf="@id/youtube"
        app:layout_constraintRight_toRightOf="@id/youtube"
        app:layout_constraintTop_toTopOf="@id/youtube" />
</androidx.constraintlayout.widget.ConstraintLayout>