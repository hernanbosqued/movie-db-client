<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/gray</item>

        <item name="android:buttonTint">?android:attr/textColor</item>
        <item name="android:shadowColor">@color/black</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimaryDisableOnly">?android:attr/textColor</item>
        <item name="android:textColorSecondary">?android:attr/textColor</item>
        <item name="android:textColorHint">?android:attr/textColor</item>

        <item name="queryHint">@string/search</item>

        <item name="autoCompleteTextViewStyle">@style/Widget.AppCompat.AutoCompleteTextView.My
        </item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.My</item>
        <item name="android:checkboxStyle">@style/Widget.AppCompat.CompoundButton.CheckBox.My</item>
        <item name="android:textViewStyle">@style/Widget.AppCompat.TextView.My</item>
    </style>

    <style name="Widget.AppCompat.SearchView.My">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.AppCompat.AutoCompleteTextView.My">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.AppCompat.CompoundButton.CheckBox.My">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Widget.AppCompat.TextView.My">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Text.Item">
        <item name="android:padding">@dimen/padding_text</item>
    </style>

    <style name="Text.Carousel" />

    <style name="Text.Carousel.Empty" parent="Text.Title.Accent">
        <item name="android:backgroundTint">@color/placeholder_dark</item>
        <item name="android:background">@drawable/placeholder</item>

    </style>

    <style name="Text.Empty" parent="Text.Title.Accent" />

    <style name="Text.Detail.Empty" parent="Text.Empty">
        <item name="android:backgroundTint">@color/placeholder_dark</item>
        <item name="android:background">@drawable/placeholder</item>
    </style>

    <style name="Text.Title.Accent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.Detail.Title" parent="Text.Title">
        <item name="android:shadowDy">15</item>
        <item name="android:shadowDx">15</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView.My">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">@dimen/font_size_26</item>
        <item name="android:textStyle">bold</item>
        <item name="elevation">15dp</item>

    </style>

    <style name="Text.Item.Empty" parent="Text.Item.Title" />

    <style name="Text.Item.Title">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Item.Ranking">
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <style name="Text.Carousel.Title">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/margin16</item>
        <item name="android:textSize">@dimen/font_size_22</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
